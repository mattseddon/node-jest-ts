{
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./",
    "target": "es5",
    "module": "commonjs",
    "outDir": ".build",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/test/**/*.spec.ts"]
}
